<%include partials/header2%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Add new Comment</h1>
        <div style="width:30%;margin:25px auto">
            <form name="myForm" ng-submit="ctrl.submit()" action="/<%=el._id%>/comments" method="POST">
                <div class="form-group"><input ng-model="ctrl.usr.comData" ng-minlength="7" required class="form-control" type="text" placeholder="Comment" name="usercomment"></div>
					<div class="alert alert-info" ng-show="myForm.comData.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.comData.$error.minlength">Minimum Seven characters</div>
                <div class="form-group"><button ng-disabled="myForm.$invalid" class="btn btn-primary btn-lg btn-block">Submit</button></div>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>
