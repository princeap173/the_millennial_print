<% include partials/header2 %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Login</h1>
        <div style="width:30%;margin:25px auto">
            <form name="myForm" ng-submit="ctrl.submit()" action="/signin" method="POST">
                <div class="form-group"><input ng-model="ctrl.usr.username" ng-minlength="3" required type="text" class="form-control" placeholder="Username" name="username"></div>
				<div class="alert alert-info" ng-show="myForm.username.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.username.$error.minlength">Minimum Three characters</div>
                <div class="form-group"><input ng-model="ctrl.usr.password" ng-minlength="3" required class="form-control" type="password" placeholder="Password" name="password"></div>
				<div class="alert alert-info" ng-show="myForm.password.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.password.$error.minlength">Minimum Three characters</div>
                <div class="form-group"><button ng-disabled="myForm.$invalid" class="btn btn-primary btn-lg btn-block">Submit</button></div>
            </form>
			
            <a href="/home1">Go to Home</a>
			 <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
			<script type="text/javascript">
			angular.module("test",[]).controller("MainCtrl",[function(){
			self=this;
			self.submit=function(){
				console.log("User submitted",self.usr);
			}
		
		}])
		</script>
        </div>
    </div>
</div>
<%include partials/footer%>
