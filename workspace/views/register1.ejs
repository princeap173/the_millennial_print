<%include partials/header2%>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Sign Up</h1>
        <div style="width:30%;margin:25px auto">
            <form name="myForm" ng-submit="ctrl.submit()" action="/register" method="POST">
                <div class="form-group"><input ng-minlength="4" ng-model="ctrl.usr.username" required type="text" class="form-control" placeholder="Username" name="username"></div>
				<div class="alert alert-info" ng-show="myForm.username.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.username.$error.minlength">Minimum Four characters</div>
				
				<div class="form-group"><input ng-minlength="7" ng-model="ctrl.usr.email" required type="text" class="form-control" placeholder="Email" name="email"></div>
					<div class="alert alert-info" ng-show="myForm.email.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.email.$error.minlength">Minimum Seven characters</div>
                <div class="form-group"><input ng-minlength="4" ng-model="ctrl.usr.password" required class="form-control" type="password" placeholder="Password" name="password"></div>
					<div class="alert alert-info" ng-show="myForm.password.$error.required">This field is required</div><div class="alert alert-info" ng-show="myForm.password.$error.minlength">Minimum Four characters</div>
                <div class="form-group"><button ng-disabled="myForm.$invalid" class="btn btn-primary btn-lg btn-block">Submit</button></div>
            </form>
            <a href="/">Go back</a>
        </div>
    </div>
</div>
